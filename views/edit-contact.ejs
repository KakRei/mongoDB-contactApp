<div class="container mt-5">
  <% if (errors.length > 0) { %>
  <div class="alert alert-danger">
    <% errors.forEach(error => { %>
    <p><%= error.msg %></p>
    <% }); %>
  </div>
  <% } %>
  <form action="/contact?_method=PUT" method="post">
    <div class="mb-3">
      <input type="hidden" name="_id" value="<%= contact._id %>" />
      <input
        type="hidden"
        name="prefNama"
        value="<%= (contact.prefNama) ? contact.prefNama : contact.nama %>"
      />
      <label for="nama" class="form-label">Nama</label>
      <input
        type="text"
        class="form-control"
        id="nama"
        aria-describedby="namaHelp"
        name="nama"
        value="<%= contact.nama ? contact.nama : '' %>"
      />
      <label for="email" class="form-label">Email address</label>
      <input
        type="email"
        class="form-control"
        id="email"
        aria-describedby="emailHelp"
        name="email"
        value="<%= contact.email ? contact.email : '' %>"
        required
      />
      <label for="nohp" class="form-label">No HP</label>
      <input
        type="text"
        class="form-control"
        id="nohp"
        aria-describedby="nohpHelp"
        name="nohp"
        value="<%= contact.nohp ? contact.nohp : '' %>"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
